<div>
<%= form_for(@restaurant) do |f| %>
  <%= f.text_field :name %>
  <%= f.label :name %>
  <br>
  <%= f.text_field :address %>
  <%= f.label :address %>
  <br>
  <%= f.text_field :phone_number %>
  <%= f.label :phone_number %>
  <br>
  <%= f.text_field :category %>
  <%= f.label :category %>
  <br>
  <%= f.submit %>
<% end %>
</div>
